<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">


    <TextView
        android:id="@+id/tv_cart_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="RGB Strips"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/cb_checkout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_cart_item"
        app:layout_constraintTop_toTopOf="@id/iv_cart_item" />

    <TextView
        android:id="@+id/tv_cart_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/cb_checkout"
        app:layout_constraintStart_toEndOf="@+id/iv_cart_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_cart_item_name" />

    <TextView
        android:id="@+id/tv_cart_item_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/cb_checkout"
        app:layout_constraintStart_toEndOf="@+id/iv_cart_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_cart_item_price" />

    <CheckBox
        android:id="@+id/cb_checkout"
        app:iconGravity="textStart"
        app:icon="@drawable/add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cart_item"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:paddingHorizontal="5dp"
        android:scaleType="fitXY"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>